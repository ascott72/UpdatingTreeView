@model UpdatingTreeView.Models.TreeViewModel


@using (Ajax.BeginForm("Edit","TreeViewModels", new AjaxOptions() {
    HttpMethod = "Post",
    OnSuccess= "alertSuccess"
}, new { id="editForm"}))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>TreeViewModel</h4>
        <hr />
        @Html.HiddenFor(model => model.NodeID)
        @Html.HiddenFor(model => model.ParentID)
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.NodeName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NodeName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NodeName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
